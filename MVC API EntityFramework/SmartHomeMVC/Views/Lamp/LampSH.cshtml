@{
    ViewBag.Title = "Lamp";
    ViewBag.Header = "LAMP";
    Layout = "~/Views/_MasterPage.cshtml";
}
<div>
    <a href="/Lamp/LampCreate"><b>Добавить новое устройство</b></a>
</div>
<br />
<div>
    <h4>Текущие объекты "Лампа":</h4>
    <div>
        @foreach (var A in @ViewBag.Lamps)
        {
            string onOff;
            if (A.Condition == true)
            {
                onOff = "Устройство включено";
            }
            else { onOff = "Устройство выключено"; }
            <table class="table table-bordered table-striped text-center">
                <tr>
                    <td><p>Название &nbsp;</p></td>
                    <td><p>Состояние &nbsp;</p></td>
                    <td><p>Настройка &nbsp;</p></td>
                    <td><p>Удаление</p></td>
                </tr>
                <tr>
                    <td><p>@A.title &nbsp;</p></td>
                    <td><p>@onOff &nbsp;</p></td>
                    <td><p><a href="/Lamp/LampEditPartial/@A.Id"><b>Настроить&nbsp;</b></a></p></td>
                    <td><p><a href="/Lamp/LampDelete/@A.Id"><b>Удалить</b></a></p></td>
                </tr>
            </table>
        }
    </div>
</div>