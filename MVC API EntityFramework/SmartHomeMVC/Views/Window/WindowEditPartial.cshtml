@model SmartHomeMVC.Models.Window

@using (Html.BeginForm("WindowEditPartial", "Window", FormMethod.Post))
{
    <fieldset>
        @Html.HiddenFor(m => m.Id)
        <p>
            @Html.LabelFor(m => m.title, "Название")
            <br />
            @Html.EditorFor(m => m.title)
        </p>
        <p>
            @Html.LabelFor(m => m.Condition, "Открыть")
            <br />
            @Html.EditorFor(m => m.Condition)

        </p>
        <p><input type="submit" value="Отправить" /></p>
    </fieldset>
}

